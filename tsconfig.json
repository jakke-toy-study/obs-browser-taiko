{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": false,
    "outDir": "./dist",
    "baseUrl": "./src",
    "types": ["vite-plugin-svgr/client"],
    "paths": {
      "@/*": ["src/*"],
      "mainArea/*": ["src/mainArea/*"]
    },
    "esModuleInterop": true,
    "moduleResolution": "node",
  },
  "include": ["src/**/*.ts", "src/main.ts", "src/renderer.ts", "custom.d.ts"],
  "exclude": ["node_modules"]
}